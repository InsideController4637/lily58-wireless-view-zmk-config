#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            display-name = "Base";
            bindings = <
&kp ESC     &kp N1  &kp N2  &kp N3    &kp N4   &kp N5                                        &kp N6  &kp N7    &kp N8     &kp N9      &kp N0  &kp GRAVE
&kp TAB     &kp Z   &kp Y   &kp U     &kp A    &kp Q                                         &kp P   &kp B     &kp M      &kp L       &kp F   &kp J
&kp LSHIFT  &kp C   &kp S   &kp I     &kp E    &kp O                                         &kp D   &kp T     &kp N      &kp R       &kp H   &kp RSHFT
&kp LCTRL   &kp V   &kp X   &kp U     &kp A    &kp O   &kp C_VOLUME_DOWN    &kp C_VOLUME_UP  &kp W   &kp G     &kp COMMA  &kp PERIOD  &kp K   &kp S
                            &kp LGUI  &kp DEL  &mo 1   &kp SPACE            &kp RET          &mo 2   &kp BSPC  &kp RALT
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Lower";
            bindings = <
&trans  &bt BT_SEL 0   &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                    &trans         &trans                &trans                 &trans             &trans            &trans
&trans  &kp PG_UP      &kp HOME      &kp UP        &kp END       &kp INS                         &kp PIPE       &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp DOUBLE_QUOTES  &kp SQT           &trans
&trans  &kp PAGE_DOWN  &kp LEFT      &kp DOWN      &kp RIGHT     &kp DELETE                      &kp AMPERSAND  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp SEMICOLON      &kp COLON         &kp BACKSLASH
&trans  &trans         &trans        &trans        &trans        &trans        &trans    &trans  &trans         &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp LESS_THAN      &kp GREATER_THAN  &trans
                                     &trans        &trans        &trans        &trans    &trans  &trans         &trans                &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Raise";
            bindings = <
&kp F1  &kp F2       &kp F3          &kp F4           &kp F5        &kp F6                       &kp F7      &kp F8        &kp F9        &kp F10       &kp F11  &kp F12
&trans  &kp AT_SIGN  &kp UNDERSCORE  &kp TILDE        &kp PERCENT   &trans                       &kp PERIOD  &kp N7        &kp N8        &kp N9        &trans   &trans
&trans  &kp PLUS     &kp MINUS       &kp ASTERISK     &kp SLASH     &kp EQUAL                    &kp COMMA   &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp N0   &trans
&trans  &kp HASH     &kp DOLLAR      &kp EXCLAMATION  &kp QUESTION  &trans     &trans    &trans  &trans      &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans   &trans
                                     &trans           &trans        &trans     &trans    &trans  &trans      &trans        &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
